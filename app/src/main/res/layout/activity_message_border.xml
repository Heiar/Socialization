<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:paddingRight="20dp">


            <View
                android:id="@+id/view_0"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:background="#A6A6A6" />

            <View
                android:id="@+id/view_1"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:background="#A6A6A6" />


            <ImageView
                android:id="@+id/image_select"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/view_1"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/msgborder_select" />

            <View
                android:id="@+id/view_2"
                android:layout_width="1dp"
                android:layout_height="45dp"
                android:layout_below="@+id/image_select"
                android:layout_marginLeft="25dp"
                android:background="#A6A6A6" />

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageWord"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/image_select"
                android:background="@drawable/timeline_content"
                android:visibility="gone"
                android:padding="10dp" >

                <com.snnu.yefan.view.RoundImageView
                    android:id="@+id/image_word"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/word" />


                <com.snnu.yefan.view.RoundImageView
                    android:id="@+id/image_voice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/image_word"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/voice" />

                <com.snnu.yefan.view.RoundImageView
                    android:id="@+id/image_pictrue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/image_voice"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/pictrue" />

                <com.snnu.yefan.view.RoundImageView
                    android:id="@+id/image_video"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@+id/image_pictrue"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:src="@mipmap/video" />

            </RelativeLayout>

        </RelativeLayout>

        <com.snnu.yefan.view.NoSrcollListView
            android:id="@+id/messsage_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#FFFFFF"
            android:dividerHeight="0dp"/>
    </LinearLayout>

</ScrollView>